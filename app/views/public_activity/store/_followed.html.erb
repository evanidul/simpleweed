<% if activity.trackable %>
<div class="feed-item-store-follwed"><!-- class used for selenium -->
	<table class="feed-item-table">
		<tr>
			<td valign = "top">
				<span class="feed-item-glyphicon glyphicon glyphicon-bullhorn"></span>
			</td>
			<td class="feed-item-title-and-body">
				<span class="item-feed-title">
					<%= link_to activity.owner.username, activity_profile_path(activity.owner), :class => 'user-link', 'data-no-turbolink' => true %>
					<span> followed </span>

					<a href="<%= store_path(activity.trackable.id)%>" data-no-turbolink='true' > <%= activity.trackable.name %></a>
					 
					<div class="time-ago-feed-item"><%= time_ago_in_words(activity.trackable.updated_at) %> ago</div>
				</span>
				<div class = "feed-item-body">
					
				</div>

			</td>
		</tr>
	</table>
</div>
<% end %>