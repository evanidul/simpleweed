

</br>
<div class="col-md-2">
	<table>
		<tr>
			<td>
				<span class="glyphicon glyphicon-user user-pic"></span>
			</td>
			<td>
				<div class="username"><%= @profile_user.username %></div>
				<div class="edit-profile-link">edit profile </div>
			</td>
		</tr>
	</table>
	<% if @user_is_viewing_own_profile	%>
		<%= render :partial =>'nav' %>
	<% end %>
	
</div>
<div class="col-md-8">
	<div class="followed-users">		
		<% @following_users.each do |user| %>
			<div class="followed-user">
				<table style="width:100%">
					<tr>
						<td>
							<span class = "feed-item-avatar" valign = "top">
								<span class="glyphicon glyphicon-user user-pic-feed-item"></span>
							</span>		
						</td>
						<td>			
							<%= link_to user.username , activity_profile_path(user), :class => 'user-link', 'data-no-turbolink' => true %>	
						</td>
						<td>
							<%= form_tag(follow_profile_path, method: "post" , class: "unfollow-user-form",:remote => true) do %>			
								<%= button_tag(type: 'submit', class: "btn btn-default pull-right") do %>
									<span>unfollow</span>
								<% end %>
							<% end %>	
						</td>
					</tr>
				</table>
				<hr/>
			</div>


		<% end %>		
	</div>
</div>

<div class="right-col-profile col-md-2">
</div>

