<div class="col-md-2">
	<%= render :partial =>'left_column', locals: {profile_user: @profile_user, user_is_viewing_own_profile: @user_is_viewing_own_profile }%>	
</div>
<div class="col-md-8">
	<div class="followed-stores">		
		<% @following_store.each do |store| %>			
			<div class="followed-store" id = "<%= store.id%>">
				<table style="width:100%">
					<tr>
						<td>
							<span class = "feed-item-avatar" valign = "top">
								<span class="glyphicon glyphicon-user user-pic-feed-item"></span>
							</span>		
						</td>
						<td>			
							<a href="<%= store_path(store.id)%>" data-no-turbolink='true' > <%= store.name %>	</a>
						</td>
						<td>
							<%= form_tag(unfollow_store_path(store), method: "post" , class: "unfollow-store-form",:remote => true) do %>			
								<%= button_tag(type: 'submit', class: "btn btn-default pull-right") do %>
									<span>unfollow</span>
								<% end %>
							<% end %>	
						</td>
					</tr>
				</table>
				<hr/>
			</div>


		<% end %>		
	</div>
</div>

<div class="right-col-profile col-md-2">
</div>

