<div class="col-md-2">
	<%= render :partial =>'left_column', locals: {profile_user: @profile_user, user_is_viewing_own_profile: @user_is_viewing_own_profile }%>
</div>
<div class="activities col-md-7">
<% @activities.each do |activity| %>
  <div class="activity">
    
    <%= render_activity activity %>
  </div>
 <% end %>

</div>

<div class="right-col-profile col-md-3">
	
	<% if !@user_is_viewing_own_profile	%>
		<% if current_user.follows?(@profile_user) %>
			<%= render :partial =>'unfollow_user_button', locals: {user: @profile_user }%>		
		<% else %>
			<%= render :partial =>'follow_user_button', locals: {user: @profile_user }%>		
		<% end %>
	<% end %>

</div>