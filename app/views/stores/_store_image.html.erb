<% if store.avatar_url.blank? %>	
	<%= link_to store_path(store)  do %>
		<span class="glyphicon glyphicon-tree-deciduous user-pic"></span>		    				
	<% end %>
<% else %>	
	<%= link_to store_path(store)  do %>
		<img class="user-pic-borderless" width="40px" height="40px" src = "http:<%= store.avatar_url %>"></img>	
	<% end %>
<% end %>