<div class="col-md-3">		
	<div class="plan-description-container">
		<div class="plan-name">
			gram
			
			<%= form_tag subscribe_store_store_path , :class => "stripe-button-form" do %>
			  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
			          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
			          data-description="subscribe to 'gram' plan"			          
			          data-label="subscribe",
			          data-panel-label="subscribe",
  					  data-allow-remember-me="false",
  					  data-email="<%= current_user.email %>"
	          ></script>
	          <% end %>
			
		</div>			
		<div class="plan-cost center">
			<span class="subscription-dollar-sign-free pull-left">
				$
			</span>
			<span class="subscription-month-free pull-right">
				/MO
			</span>

			<div class="subscription-dollar-cost ">
				<span>9</span>			
			</div>
			<div class="subscription-free-trial">
				1 month free trial
			</div>
		</div>
		<div class="cancel-text">
			try simple weed for a month, and see if we can help you sell an extra gram
		</div>
	</div>
	<%= render partial: 'stores/free_subscription_features' %>
</div>