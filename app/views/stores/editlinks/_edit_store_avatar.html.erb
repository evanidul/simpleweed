<% if @store.avatar_url.blank? %>
	<% if @role_service.canManageStore(current_user, @store) %>
		<% if @subscription_service.canStoreUseFeature(@store, "store-image-hosting") || current_user.has_role?(:admin) %>	
			<%= link_to edit_photo_store_path(@store), data: { toggle: "modal", target: "#modal", remote: edit_photo_store_path(@store)} , id: "edit-store-photo-link",  class: "btn edit-store-photo-link" do %>
				<span class="glyphicon glyphicon-tree-deciduous user-pic"></span>    				
			<% end %>	
		<% else %>
			<%= link_to subscription_plans_store_path(@store.id), id: "edit-store-photo-link",  class: "btn edit-store-photo-link" do %>
				<span class="glyphicon glyphicon-tree-deciduous user-pic"></span>    				
			<% end %>	
		<% end %>
	<% else %>
		<%= link_to edit_photo_store_path(@store), data: { toggle: "modal", target: "#modal", remote: edit_photo_store_path(@store)} , id: "edit-store-photo-link",  class: "btn edit-store-photo-link" do %>
				<span class="glyphicon glyphicon-tree-deciduous user-pic"></span>    				
		<% end %>	
	<% end %>
