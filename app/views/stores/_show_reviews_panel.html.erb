<p>

<% if @store_reviews.empty? %>
	<div class="store-review">
		
		<div class="alert alert-warning fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <strong>no reviews yet.</strong> be the first to review this store!
       <script>				 
			 $(function () {
				  $('#write-review-button').popover({ 
				    html : true,
				    placement : "right"
				  }).popover('show');
				});
			 </script>
    </div>
	</div>
<% end %>

<% @store_reviews.each do |store_review| %>
	<div class="store-review">
		<h4>
			<%= store_review.user.username %>
			<small><%= store_review.created_at %></small>
			<small><%= store_review.stars %></small>
			<ul class = "store-star-rank" style="float:right;" star-value="<%= store_review.stars %>">			
			<% (1..store_review.stars).each do |i| %>
				<li class="rating_star">
					<span class="glyphicon glyphicon-star"></span>
				</li>
			<% end %>
			<% darkstars = 5 - store_review.stars
				(1..darkstars).each do |i| %>
				<li class="rating_star off">
					<span class="glyphicon glyphicon-star"></span>
				</li>
			<% end %>

			</ul>			
		</h4>			

		<table>
			<tr>
				<td>					
					<div class="btn-group-vertical review-vote-controls">		
						<%= form_for ([@store, store_review, store_review.store_review_votes.build]), :remote => true, :html => { :id => "new_upvote_on_#{store_review.id}" } do |f| %>
							<%= f.hidden_field :vote, :value => "1" %> 
							<%= button_tag(type: 'submit', class: "btn btn-default upvotebutton") do %>
 								<div class="glyphicon glyphicon-chevron-up"></div>
							<% end %>

						<% end %>
						<div> 
							<div class="review-votes" id="<%=store_review.id%>_vote_sum"><%= store_review.sum_votes %> </div>
						</div>
						
						<%= form_for ([@store, store_review, store_review.store_review_votes.build]), :remote => true, :html => { :id => "new_downvote_on_#{store_review.id}" } do |f| %>
							<%= f.hidden_field :vote, :value => "-1" %> 
							<%= button_tag(type: 'submit', class: "btn btn-default downvotebutton") do %>
 								<div class="glyphicon glyphicon-chevron-down"></div>
							<% end %>
						<% end %>
					</div>
				</td>
				<td class="review-content">
					<%= store_review.review %>
				</td>	
			</tr>
		</table>

		<div id="comments_for_review_<%= store_review.id %>" class="store-review-comments">			
			<% store_review.store_review_comments.each do |store_review_comment| %>
				<div id="comment_<%= store_review_comment.id %>" class="store-review-comment" >
					<%= store_review_comment.user.username %><br/>
					<%= store_review_comment.comment %>
				</div>
			<% end %>			
		</div>
		<%= form_for ([@store, store_review, store_review.store_review_comments.build]), :remote => true, :html => { :id => "new_comment_on_#{store_review.id}" } do |f| %>
			<%= f.text_area :comment, :class => 'form-control', :required => true, :rows => 1 %>
			<%= f.submit 'post comment', :class => 'btn btn-primary lowercase' , :id => 'save_comment_on_#{store_review.id' %>
		<% end %>		
		
		

	</div> 
<% end %>
</p>