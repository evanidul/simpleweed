<p>

<% if @store_reviews.empty? %>
	<div class="store-review">
		
		<div class="alert alert-warning fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <strong>no reviews yet.</strong> be the first to review this store!
       <script>				 
			 $(function () {
				  $('#write-review-button').popover({ 
				    html : true,
				    placement : "right"
				  }).popover('show');
				});
			 </script>
    </div>
	</div>
<% end %>

<% @store_reviews.each do |store_review| %>
	<div class="store-review">
		<h4>
			<%= store_review.user.username %>
			<small><%= store_review.created_at %></small>
			<small><%= store_review.stars %></small>
			<ul class = "store-star-rank" style="float:right;">
			<% (1..store_review.stars).each do |i| %>
				<li class="rating_star">
					<span class="glyphicon glyphicon-star"></span>
				</li>
			<% end %>
			<% darkstars = 5 - store_review.stars
				(1..darkstars).each do |i| %>
				<li class="rating_star off">
					<span class="glyphicon glyphicon-star"></span>
				</li>
			<% end %>

			</ul>
			<!-- <div class="star-rank" style="float:right;">
				<span class="glyphicon glyphicon-star"></span>
				<span class="glyphicon glyphicon-star"></span>
				<span class="glyphicon glyphicon-star"></span>
				<span class="glyphicon glyphicon-star"></span>
				<span class="glyphicon glyphicon-star"></span>		
			 </div>-->
		</h4>			

		<table>
			<tr>
				<td>
					<div class="btn-group-vertical review-vote-controls">
						<button type="button" class="btn btn-default"><div class="glyphicon glyphicon-chevron-up"></div></button>
						<div> 
							<div class="review-votes">0 </div>
						</div>
						<button type="button" class="btn btn-default"><div class="glyphicon glyphicon-chevron-down"></div></button>		
					</div>
				</td>
				<td>
					<%= store_review.review %>
				</td>	
			</tr>
		</table>
		
	</div> 
<% end %>
</p>