<div class="tab-pane active" id="info">
	<h4 class="item-search-item-name">
		<!-- dvu: we don't use link_to because the link name is too complicated to embed -->
  	<table>
  		<tr>
  			<td class="item-img-td">
  				<%= render partial: 'store_items/item_image', locals: {item: @store_item} %>
  			</td>
  			<td>
				<%= @store_item.name %>
  			</td>
  		</tr>
  	</table>
	  	
	  	
  	
	<%
	if !(@store_item.maincategory.nil? || @store_item.maincategory.empty?)
		itemcategory = @store_item.maincategory
		case itemcategory
			# ['flower', 'concentrate', 'edible', 'pre-roll', 'other', 'accessory']
			when "flower"
				%>
				<table class= "small pull-right search-results-item-price-table">
					<tr>												
						<th>1g</th>
						<th>1/8oz</th>
						<th>1/4oz</th>
						<th>1/2oz</th>
						<th>1oz</th>
					</tr>
					<tr>												
						<td <% if @filterpriceby == "gram" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costonegram %>
						</td>
						<td <% if @filterpriceby == "eighth" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costeighthoz %>
						</td>
						<td <% if @filterpriceby == "quarteroz" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costquarteroz %>
						</td>
						<td <% if @filterpriceby == "halfoz" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costhalfoz %>
						</td>
						<td <% if @filterpriceby == "oz" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costoneoz %>
						</td>
					</tr>
				</table>
				<%	
			when "concentrate"
				%>
				<table class= "small pull-right search-results-item-price-table">
					<tr>
						<th></th>
						<th></th>
						<th>1/2g</th>
						<th>1g</th>
						<th>1/8oz</th>												
					</tr>
					<tr>
						<td></td>
						<td></td>
						<td <% if @filterpriceby == "halfgram" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costhalfgram %>
						</td>
						<td <% if @filterpriceby == "gram" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costonegram %>
						</td>
						<td <% if @filterpriceby == "eighth" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costeighthoz %>
						</td>
																	
					</tr>
				</table>
				<%	
			else
				%>
				<table class= "small pull-right search-results-item-price-table">
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>												
						<th>each</th>												
					</tr>
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td></td>				
						<td <% if @filterpriceby == "gram" %>
								class = "highlight"
							<% end %>
						>
							<%= @store_item.costperunit %>
						</td>
						
					</tr>
				</table>
						
			
			<% end #switch%>
		<% end #if %>						
	</h4>			
	<div class="star-rank" >
		<span class="glyphicon glyphicon-star"></span>
		<span class="glyphicon glyphicon-star"></span>
		<span class="glyphicon glyphicon-star"></span>
		<span class="glyphicon glyphicon-star"></span>
		<span class="glyphicon glyphicon-star"></span>		
	</div>
	<div class ="search-results-item-badges">
		<%
		badges = [ ]					
			if !(@store_item.cultivation.nil? || @store_item.cultivation.empty?)
				badges.push(@store_item.cultivation)																
			end
			if @store_item.dogo
				badges.push("bogo")
			end
			if @store_item.topshelf
				badges.push("topshelf")
			end
			if @store_item.privatereserve
				badges.push("privatereserve")
			end
			if @store_item.organic
				badges.push("organic")
			end
			if @store_item.sugarfree
				badges.push("sugarfree")
			end
			if @store_item.glutenfree
				badges.push("glutenfree")
			end
			if @store_item.supersize
				badges.push("supersize")
			end


		%>
		<% badges.each do |badge| %>								    
			<span class="badge search-item-badge-<%= badge %>"><%= badge %></span>
		<% end %>
		
	</div>
	<%
		straincat = [ ]
		
		if !(@store_item.strain.nil? || @store_item.strain.empty?)
			strainstr = "strain: #{@store_item.strain}"
			straincat.push(strainstr)
		end	
		if !(@store_item.maincategory.nil? || @store_item.maincategory.empty?)
			categorystr = "category: #{@store_item.maincategory}"
			straincat.push(categorystr)
		end
		if !(@store_item.subcategory.nil? || @store_item.subcategory.empty?)	
			subcatstr = "subcategory: #{@store_item.subcategory}"
			straincat.push(subcatstr)
		end	
	%>

	<div class="search-result-item-category-strain-meta">
		<%= straincat.join ' | '  %> 
	</div>

			
	<%
		lab = []
		if !(@store_item.thc.nil? )
			thcstr = "thc: #{@store_item.thc}"
			lab.push(thcstr)
		end
		if !(@store_item.cbd.nil? )
			cbdstr = "cbd: #{@store_item.cbd}"
			lab.push(cbdstr)
		end
		if !(@store_item.cbn.nil? )
			cbnstr = "cbn: #{@store_item.cbn}"
			lab.push(cbnstr)
		end
	%>

	<div class="search-result-item-lab-meta">
		<%= lab.join ' | '	 %>
	</div>
	<div class="search-result-item-promo">								
		<%= @store_item.promo %>
	</div>
	<% if @store_item.description && !@store_item.description.empty? %>
		<div id="item-description">
			<h4>description</h4>
			<p><%= raw @store_item.description %>
			</p>
		</div>
	<% end %>

	<% 
		top_review = @store_item.store_item_reviews.sort_by {|review| review.sum_votes}.reverse.first
	%>
	<% if top_review %>
		<h4>top review</h4>
		<div class="item-review">	
			<table class = "item-review-display-and-comment-vote-controls">
				<tr>
					<td>				
						<span class="feed-item-icon-container">
							<%= render partial: 'profile/profile_image', locals: {user: top_review.user} %>
						</span>
					</td>
					<td>				
						<%= link_to top_review.user.username , activity_profile_path(top_review.user), :class => 'user-link', 'data-no-turbolink' => true %>						
						<small> <%= time_ago_in_words(top_review.created_at) %> ago</small>			
						<ul class = "store-star-rank" style="float:right;" star-value="<%= top_review.stars %>">			
						<% (1..top_review.stars).each do |i| %>
							<li class="rating_star">
								<span class="glyphicon glyphicon-star"></span>
							</li>
						<% end %>	
						<% darkstars = 5 - top_review.stars
							(1..darkstars).each do |i| %>
							<li class="rating_star off">
								<span class="glyphicon glyphicon-star"></span>
							</li>
						<% end %>

						</ul>
					</td>	
				</tr>		
				<tr>
					<td>					
					</td>
					<td class="review-content">
						<%= top_review.review %>
						<div id="read-only-comments_for_item_review_<%= top_review.id %>" class="item-review-comments">						
							<% top_review.store_item_review_comments.each do |store_item_review_comment| %>
								<%= render partial: 'store_item_review_comments/store_item_review_comment', locals: {store_item_review_comment: store_item_review_comment} %>
							<% end # comments loop %>	
						</div>
					</td>	
				</tr>
			</table>
		</div>
		</br> 
	<% end %>

	