<div class="modal-dialog">
  <div class="modal-content">    
	  <div class="modal-header">
          <h4 class="modal-title inline-header" id="myModalLabel">restore item</h4>          
          <button type="button" class="close popup-close-x" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
      </div> 
    <div class="modal-body">
		<!-- Tab panes -->
		<div class="tab-content item-modal">
		  	<%= render :partial =>'store_items/info_tab' %>
		</div>  	
		
	</div>


    
		
	<%= form_for :store_item, url: undestroy_store_store_item_path, method: 'post', :html => {:class => 'inline'} do |f| %>                        
      <p class = "form-group pull-right">              	
        <button id="cancel-button" type="button" class="btn btn-default" data-dismiss="modal">close</button>
        <%= f.submit 'unarchive' ,:class => 'btn btn-primary' , :id => 'unarchive_item_submit'%>
      </p>
    <% end %>		
	
    <div class="simple-weed-modal-footer">
    </div>  
  </div> <!-- modal-content -->
</div>    
<script>
//be careful with css selector.  If you remove .nav-tabs, it'll disable all the links in the tab panels.
$('#item-preview-tab-content .nav-tabs a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')  
})
</script>
