	      	</div>
		    
			<h4>lab information</h4>          
			  <table id="item-preview-lab-information" class="table table-bordered">
			  	<tr>
			  		<th>thc %
			  		</th>
					<th>cbd %
			  		</th>			  		
					<th>cbn %
			  		</th>			  		
			  	</tr>
			  	<tr>			  		
			  		<td>
			  			<% if  @store_item.thc %>
					    	<%= @store_item.thc %>
					    <% else %>
					    	none.
					    <% end %>
					</td>
					<td>												    					    
					    <% if  @store_item.cbd %>
					    	<%= @store_item.cbd %>
					    <% else %>
					    	none.
					    <% end %>					    						
					</td>
					<td>
					    <% if  @store_item.cbn %>
					    	<%= @store_item.cbn %>
					    <% else %>
					    	none.
					    <% end %>					    						
					</td>  
			  	</tr>
			  </table>
			  <h4>pricing</h4>
			  <table id="price-table" class="table table-bordered">
				 <tr>
				 	<th>.5 g</th>
				 	<th>1 g</th>
				 	<th>1/8 oz</th>
